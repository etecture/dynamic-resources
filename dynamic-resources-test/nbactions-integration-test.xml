<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>rebuild</actionName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
        </goals>
        <properties>
            <Env.MAVEN_OPTS>-Xms512m -Xmx2G -XX:MaxPermSize=1024m -Djava.awt.headless=true</Env.MAVEN_OPTS>
        </properties>
    </action>
    <action>
        <actionName>test.single</actionName>
        <goals>
            <goal>test-compile</goal>
            <goal>de.herschke:neo4j-maven-plugin:start-server</goal>
            <goal>surefire:test</goal>
            <goal>de.herschke:neo4j-maven-plugin:stop-server</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <maven.test.failure.ignore>true</maven.test.failure.ignore>
            <maven.test.error.ignore>true</maven.test.error.ignore>
            <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
            <file.encoding>UTF-8</file.encoding>
            <neo4j.port>17474</neo4j.port>
        </properties>
        <activatedProfiles>
            <activatedProfile>neo4j-server</activatedProfile>
            <activatedProfile>!code-analysis</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>debug.test.single</actionName>
        <goals>
            <goal>test-compile</goal>
            <goal>de.herschke:neo4j-maven-plugin:start-server</goal>
            <goal>surefire:test</goal>
            <goal>de.herschke:neo4j-maven-plugin:stop-server</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <forkMode>once</forkMode>
            <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
            <jpda.listen>true</jpda.listen>
            <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
            <file.encoding>UTF-8</file.encoding>
            <neo4j.port>17474</neo4j.port>
        </properties>
        <activatedProfiles>
            <activatedProfile>neo4j-server</activatedProfile>
            <activatedProfile>!code-analysis</activatedProfile>
        </activatedProfiles>
    </action>
</actions>
